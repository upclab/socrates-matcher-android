<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PageIndicatorDefaults" parent="@android:style/Theme">
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
    </style>
    <style name="Widget" />
    <style name="Widget.TabPageIndicator" parent="@style/Widget">
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textSize">12.0sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/vpi__tab_indicator</item>
        <item name="android:paddingLeft">22.0dip</item>
        <item name="android:paddingTop">12.0dip</item>
        <item name="android:paddingRight">22.0dip</item>
        <item name="android:paddingBottom">12.0dip</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TextAppearance.TabPageIndicator" parent="@style/Widget">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/vpi__dark_theme</item>
    </style>
    <style name="StyledIndicators" parent="@android:style/Theme.Light">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>
    <style name="CustomTabPageIndicator" parent="@style/Widget.TabPageIndicator">
        <item name="android:textColor">#ff555555</item>
        <item name="android:background">@drawable/custom_tab_indicator</item>
    </style>
    <style name="Theme.SplashScreenTheme" parent="@android:style/Theme">
        <item name="android:windowAnimationStyle">@style/Animations.SplashScreenAnimation</item>
    </style>
    <style name="Animations.SplashScreenAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/appear</item>
        <item name="android:windowExitAnimation">@anim/disappear</item>
    </style>
</resources>
